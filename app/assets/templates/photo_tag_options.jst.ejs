<style>

.photo-tag {
  width: 90px;
  height: 90px;
  border: 5px solid red;
  background: transparent;
  margin-top: -50px;
  margin-left: -50px;
  transition: left 0.5s ease-in;
  z-index: 1;
}
.tag-options {
  position: absolute;
  float: left;
  list-style: none;
  color: red;
  margin: 0px;
  padding: 0px;
  top: 95px;
  left: -5px;
}

.tag-select {
  border-right: 5px solid red;
  border-left: 5px solid red;
  border-bottom: 1px solid red;
  color: red;
  height: 20px;
  width: 90px;
  cursor: pointer;
  font-family: sans-serif;
}

.tag-select:hover {
  color: white;
  background: red;
}

.tag-options li:last-child {
  border-bottom: 5px solid red;
}
</style>

<ul class='tag-options'>
  <% _(users).each(function (user) { %>
    <li class='tag-select' data-id='<%= user.id %>'><%= user.username %></li>
  <% }); %>
</ul>